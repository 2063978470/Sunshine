{% extends "SunshineUIBundle::layout.html.twig" %}

{% block content %}
    {% block content_header %}
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                岗位管理
                <small>用来管理设置人员岗位、职位等信息。</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> 组织架构管理</a></li>
                <li class="active">岗位管理</li>
            </ol>
        </section>
    {% endblock %}

    <!-- Main content -->
    <section class="content">
        {% block main_content %}{% endblock %}
    </section>
    <!-- /.content -->

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('themes/bootstrap/easyui.css', 'easyui') }}">
    <link rel="stylesheet" href="{{ asset('themes/icon.css', 'easyui') }}">
{% endblock %}

{% block bottom_script %}
    {{ parent() }}
    <!-- EasyUI -->
    <script src="{{ asset('jquery.easyui.min.js', 'easyui') }}"></script>
    <script src="{{ asset('jquery.pjax.js', 'js') }}"></script>
{% endblock %}