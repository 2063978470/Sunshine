{% extends "@SunshineOrganization/title/title.html.twig" %}

{% block main_content %}
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ title.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ title.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ title.code }}</td>
            </tr>
            <tr>
                <th>Ordernumber</th>
                <td>{{ title.orderNumber }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{% if title.enabled %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ title.description }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if title.createdAt %}{{ title.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if title.updatedAt %}{{ title.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Deletedat</th>
                <td>{% if title.deletedAt %}{{ title.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_org_title_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_org_title_edit', { 'id': title.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
